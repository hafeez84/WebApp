                                            }
                                        }
                                        @Html.ActionLink("Add to cart", "ToCart", "Cart", new { id = i.Id }, new { @class = "badge " })
                                        <div class="caption">
                                            <div>
                                                <strong>
                                                    @Html.ActionLink(i.Pname, "Details", "Products", new { id = i.Id }, new { @class = "text-capitalize" })
