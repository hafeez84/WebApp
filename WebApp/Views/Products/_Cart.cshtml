@model WebApp.Models.UserProducts

<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Description
        </th>
        <th>
            Uploaded at
        </th>
        <th>
            Amount
        </th>
        <th>
            Cart
        </th>

        <th>
            Buy
        </th>
    </tr>
    @foreach (var i in Model.ProductsV)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => i.Pname)
            </td>
            <td>
                @Html.DisplayFor(item => i.Pdescription)
            </td>
            <td>
                @Html.DisplayFor(item => i.Created_at)
            </td>
            <td>
                @Html.DisplayFor(item => i.Amount)
            </td>
            <td>
                @Html.ActionLink("Remove", "FromCart", new { controller = "Cart", id = i.Id }, new { @class = "btn btn-danger" })
            </td>

            <td>
                @Html.ActionLink("Buy", "Buy", new { controller = "Sold", id = i.Id}, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>