
@model IEnumerable<WebApp.Models.Product>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="glyphicon glyphicon-folder-close"></i> Products
        </h3>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Upload a product", "Create", new { controller = "Products" }, new { @class = "btn btn-success " })
        <table class="table">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Product description
                </th>
                <th>
                    Uploaded at
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Status != 0)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pdescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { controller = "Products", id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Details", "Details", new { controller = "Products", id = item.Id }, new { @class = "btn btn-info btn-xs" })
                            @Html.ActionLink("Delete", "Delete", new { controller = "Products", id = item.Id }, new { @class = "btn btn-danger btn-xs product-delete-btn" })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

