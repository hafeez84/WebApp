
@model IEnumerable<WebApp.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pdescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pdescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <button class="btn btn-default">
                    @Html.ActionLink("Edit", "Edit", "Products", new { id = item.Id }, null)
                </button>
                <button class="btn btn-default">
                  @Html.ActionLink("Details", "Details", "Products", new { id = item.Id }, null)
                </button>
                <button class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", "Products", new { id = item.Id }, null)
                </button>
            </td>
        </tr>
    }

</table>