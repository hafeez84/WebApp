@model WebApp.Models.ProductsView

<div class="col-md-3 ">
    @foreach (var i in Model.Categories)
    {
    <div class="list-group">

        @Html.ActionLink(i.Name, "Categories", "Products", new { name = i.Name }, new { @class = "list-group-item active text-capitalize" })

        @foreach (var ii in Model.Product_b)
        {
            if (i.Id == ii.Cate_id)
            {
                //<a href="#" class="list-group-item"> @ii.Name <span class="badge">4</span> </a>
                @Html.ActionLink(ii.Name , "Brands", "Products", new { name = ii.Name }, new { @class = "list-group-item text-capitalize" })
            }
        }
    </div>
    }
</div>

