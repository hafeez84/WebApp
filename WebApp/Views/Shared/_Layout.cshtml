<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shoppin", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (Session["u_id"] == null && Session["c_id"] == null)
                        {
                            @Html.ActionLink("Sign up", "Signup", "Users")
                        }
                    </li>

                    <li>
                        @if (Session["u_id"] == null && Session["c_id"] == null)
                        {
                            @Html.ActionLink("Login", "Index", "Account")
                        }
                    </li>
                    <li>
                        @if (Session["c_id"] != null || Session["u_id"] != null)
                        {
                            @Html.ActionLink("Logout", "Logout", "Account")
                        }
                    </li>
                    <li>
                        @if (Session["u_id"] != null)
                        {
                            @Html.ActionLink("Profile", "Profile", "Users", new { id = (int) Session["u_id"] }, null)
                        }
                    </li>
                    <li>
                        @if (Session["c_id"] != null)
                        {
                            @Html.ActionLink("Profile", "Profile", "Companies", new { id = (int) Session["c_id"] }, null)
                        }
                    </li>
                </ul>
            </div>
    </div>
    <div class="container-fluid">
        <div>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
